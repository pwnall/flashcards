<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="us.costan.watchy.flashcards.StartActivity"
    android:id="@+id/start">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/learnButtonLabel"
        android:id="@+id/learnButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="startLearning" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/editCardsButtonLabel"
        android:id="@+id/editCardsButton"
        android:layout_below="@+id/learnButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:onClick="editCards" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/appNameLabel"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:textSize="36sp" />
</RelativeLayout>
